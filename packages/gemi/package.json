{
  "name": "gemi",
  "version": "0.1.2",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "bin": {
    "gemi": "./dist/bin/gemi"
  },
  "exports": {
    "./http": "./dist/http/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "private": false,
  "module": true,
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "bun run build:core && bun run build:bin && bun run build:types",
    "build:core": "bun ./scripts/build.ts",
    "build:bin": "bun build --compile ./bin/gemi.ts --external vite --external react-dom --outfile ./dist/bin/gemi",
    "build:types": "tsc"
  },
  "dependencies": {
    "urlpattern-polyfill": "^10.0.0"
  }
}
